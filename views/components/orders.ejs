
<div class="section-heading" id="shopping-cart">
  <div class="container">
    <h1>Your Cart</h1>
    
    <div class="cart-items">
      <div class="cart-item">
        <img src="images/hamburger.jpg" alt="Hambuger" >
        <div class="item-details">
          <h3>Hamburger</h3>
          <p>Price: $10.00</p>
          <p>Quantity: 2</p>
        </div>
        <button class="btn btn-remove">Remove</button>
      </div>
      <div class="cart-item">
        <img src="/images/drinks.jpg" alt="Drinks" >
        <div class="item-details">
          <h3>Drink</h3>
          <p>Price: $15.00</p>
          <p>Quantity: 1</p>
        </div>
        <button class="btn btn-remove">Remove</button>
      </div>
      <!-- More cart items can be added dynamically -->
    </div>

    <div class="cart-total">
      <h2>Total: $35.00</h2>
      <button class="btn btn-primary">Checkout</button>
    </div>
  </div>
</div>
