
<style>
  .menus-modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.1);
    
    transition: all 1s; /* Semi-transparent background */
  }

  .menus-modal-content {
    
    background-color: rgba(0, 0, 0, 0.2);
    margin: 15% auto;
    padding: 30px;
    border: 1px solid #888;
    border-radius: 10px;
    width: 80%;
    max-width: 600px;
    position: relative;
    transform: slideIn 0.3s;
  
    transition: all 1s;
  }

  .menus-close {
    color: #d6d6d6;
    float: right;
    font-size: 28px;
    font-weight: bold;
    
  }

  .menus-close:hover,
  .menus-close:focus {
    color: rgb(255, 0, 0);
    text-decoration: none;
    cursor: pointer;
  }

  .menus-btn {
    text-decoration: none;
    font-size: 16px;
    color: #ffffff;
    font-weight: bold;
    font-family: "Lumanosimo", cursive;
    font-weight: 600;
    font-style: normal;
    transition: all 0.15s ease-in-out;
    background: none;
    border: none; 
  }

  .menus-btn:hover{
    text-shadow: 2px 2px 3px rgba(255, 255, 255, 0.8);
    cursor: pointer;
  }

  .menus-genie-module {
    padding: 50px 0;
  }

  .menus-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    
    transition: all .5s;
  }

  .menus-content {
    flex-basis: 50%;
  }

  

  .menus-content h2 {
    font-size: 2rem;
    margin-bottom: 20px;
    color: coral;
  }

  .menus-content p {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .menus-content ul {
    list-style: none;
    margin-bottom: 20px;
    position: relative;
  }

  .menus-content ul li {
    font-size: 1.1rem;
    cursor: pointer;
  }

  .popup2 {
    display: none;
    position: absolute;
    top: -180px;
    right: 50px;
    width: 90%;
    
    justify-content: center;
    align-items: center;
    
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.95);
    color: #ff5e00;
    border-radius: 10px;
    border-style: double;
    border-color: coral;
    box-shadow: 0 2px 5px rgb(255, 255, 255);
    transition: all 1s;
    z-index: 999;
  }

  .menus-content ul li:hover .popup2 {
    display: flex;
    
  }

  .menus-cta-button {
    display: inline-block;
    padding: 15px 30px;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .menus-cta-button:hover {
    background-color: #0056b3;
  }

  .image img {
    width: 100%;
    height: auto;
  }

  @media screen and (max-width: 768px) {
    .menus-container {
      flex-direction: column;
      text-align: center;
    }

    .menus-content,
    .image {
      flex-basis: 100%;
    }

    .menus-content {
      margin-bottom: 40px;
    }
  }
</style>

<button class="menus-btn" id="open-menus-modal">Menus</button>

<div id="menus-modal" class="menus-modal">
  <div class="menus-modal-content">    
    <span class="menus-close">&times;</span>     
        
          <%- include("ownerMenuTemplate") %>       
      
    
  </div>
</div>

<script>
  var openMenusModalBtn = document.getElementById('open-menus-modal');
  var menusModal = document.getElementById('menus-modal');

  openMenusModalBtn.onclick = function() {
    menusModal.style.display = 'block';
  };

  var menusCloseBtn = document.getElementsByClassName('menus-close')[0];
  menusCloseBtn.onclick = function() {
    menusModal.style.display = 'none';
  };

  window.onclick = function(event) {
    if (event.target == menusModal) {
      menusModal.style.display = 'none';
    }
  };
</script>
</html>
